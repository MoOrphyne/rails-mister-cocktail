<h1>Cocktails</h1>

<%= link_to raw('<i class="fas fa-plus"></i> add a cocktail'), new_cocktail_path %>

<div class="box">
  <% @cocktails.each do |cocktail| %>
    <%= link_to cocktail_path(cocktail) do %>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cocktail.image_url %>)">
        <%= cocktail.name %>
      </div>
    <% end %>
  <% end %>
</div>
